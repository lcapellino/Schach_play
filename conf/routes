
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index
#GET     /schach                     controllers.MainController.schach



#JSON Routes
GET    /move                        controllers.MainController.move(move: String, webSocketID: String)
GET    /select                      controllers.MainController.select(y: Int,x: Int, webSocketID: String)
GET    /json                        controllers.MainController.json(webSocketID: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Websocket
GET     /socket                     controllers.MainController.socket